<view class="scene">
  <view class="drawArea" id="scene-editor">
    <canvas class="myCanvas" disable-scroll="true" canvas-id="myCanvas" 
    style="width: {{canvasWidth}}px; height: {{canvasHeight}}px;"
    bindtap='addphoto'></canvas>
  </view>
  <view class='buttonstyle'>
    <button bindtap='handlepixel'>统一颜色</button>
  </view>
  <view class="buttonstyle">
    <button bindtap='processpic'>黑白转变</button>
  </view>
  <view class="buttonstyle">
    <button bindtap='furtherprocess'>去除噪点</button>
  </view>
  <view class="buttonstyle">
    <button bindtap='next'>下一页</button>
  </view>
</view>