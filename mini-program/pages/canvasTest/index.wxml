<view class="scene">
  <view class="drawArea" id="scene-editor">
    <canvas class="myCanvas" disable-scroll="true" canvas-id="myCanvas" bindtap='addphoto'></canvas>
  </view>
  <view class='buttonstyle'>
    <button bindtap='handlepixel'>统一颜色</button>
  </view>
  <view class="buttonstyle">
    <button bindtap='processpic'>黑白转变</button>
  </view>
  <view class="buttonstyle">
    <button bindtap='furtherprocess'>去除噪点</button>
  </view>
  <view class="buttonstyle">
    <button bindtap='next' disabled='{{disable}}'>{{tip}}</button>
  </view>
</view>